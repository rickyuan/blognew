<div class="container">
	<div class="row">
		<span class="page_title">添加文章类别</span>
		<div class="span9">
	 		<%= form_for(@category) do |f| %>
				<div>
					<%= f.label :name, '类别名称' %>
					<%= f.text_field :name %>
				</div>
				<div>
					<%= f.label :ename, '英文名称' %>
					<%= f.text_field :ename %>
				</div>
				<div>
					<%= f.submit '创建', :class => "btn" %>
				</div>
			<% end %>
		</div>
	</div>
</div>