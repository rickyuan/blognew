<div class="container">
	<div class="row">
		<div class="span9">
			<div class="info">
			<h2><%= @movie.cname %> <%= @movie.oname unless @movie.oname.nil? %></h2>
        	    <%= image_tag(@movie.screenshot.normal.url) %>
				<div class="clearfix"></div>
				<span>导演</span>:<%= render @movie.directors %><br>
				<span>演员</span>:<%= render @movie.actors %><br>
				<span>类型</span>:<%= render @movie.genres %><br>
				<span>地区</span>:<%= @movie.location %><br>
				<span>上映日期</span>:<%= @movie.releasedate %><br>
				<div class="review"><%= @movie.review %></div>
				<span>资源</span>:<%= render @movie.reslinks %> <%= link_to '+', new_movie_reslink_path(@movie, @reslink) %><br>
				<hr>
				<small class="muted">创建于<%= @movie.created_at.to_date %></small>
			</div>
			<% if admin? %>
			<%= link_to 'Edit', edit_movie_path(@movie) %>
			<%= link_to 'Delete', movie_path(@movie), :confirm => "Are you sure?", :method => :delete %>
			<% end %>
		</div>
	</div>
</div>